generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      =  "mysql://root:@localhost:3307/produtos"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
}


model Product {
  id      Int     @id @default(autoincrement())
  name    String
  price   Float
  photo   String
  reviews Review[]
}

model Review {
  id        Int     @id @default(autoincrement())
  rating    Int     @default(0) // De 1 a 5 estrelas
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}
